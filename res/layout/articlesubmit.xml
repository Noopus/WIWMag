<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  
    android:background="#f26522" 
    android:layout_gravity="center">
    
    <LinearLayout
         android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/button2"
        android:layout_width="55dp"
        android:layout_height="55dp"
      android:background="@drawable/backbutt"
      android:onClick="back"
       />

      <com.androidbegin.jsonparsetutorial.Coustxt
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Choose Article"
        android:layout_gravity="center" 
        android:layout_margin="20dp"
        android:textColor="#ffffff"
         />

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:layout_gravity="center" 
          >

        

          <ImageView
              android:id="@+id/imageView1"
              android:layout_width="wrap_content"
              android:layout_height="200dp"
              android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true"
              
              android:minHeight="200dp"
              android:minWidth="200dp" />
 <LinearLayout 
        android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
        android:minHeight="50dp"
        android:ems="10" 
       android:background="@drawable/textborder"
        android:gravity="center"
         >
        <com.androidbegin.jsonparsetutorial.Coustxt
        android:id="@+id/brwsimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
       android:text="Tap to pick Image"
        android:layout_gravity="center" 
  
        android:layout_margin="5dp"
        android:textColor="#ffffff"/>
      
      </LinearLayout>
         
               
              

      </RelativeLayout>
      
      <LinearLayout 
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:ems="10" 
       android:background="@drawable/textborder"
        android:gravity="center"
        android:layout_margin="20dp" >
        <com.androidbegin.jsonparsetutorial.Coustxt
        android:id="@+id/brwsdoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Tap to browse Document"
        android:layout_gravity="center" 
  
        android:layout_margin="5dp"
        android:textColor="#ffffff"/>
      
      </LinearLayout>
      

    <LinearLayout
        
        
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:ems="10" 
        android:background="#ffffff"
        android:gravity="center"
        android:layout_margin="20dp" >
          <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
        android:background="#ffffff"
        android:layout_gravity="center"
        android:hint="Author name"
android:focusableInTouchMode="true"
        android:layout_marginRight="5dp"
         android:layout_marginLeft="5dp">

        <requestFocus />
    </EditText></LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/commsenbutt"
        android:layout_gravity="center" 
        android:layout_margin="20dp"
        android:onClick="send"/>

</LinearLayout></ScrollView>