<?xml version="1.0" encoding="utf-8"?>
      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:parallax_factor="1.9"
   
  
    >
    
          
          
          
          <ScrollView
              
               android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#cccccc"
        android:scrollX="200dp"
        android:scrollY="200dp"
         >
             <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
        
       
        >

        <ListView
            android:id="@+id/gridView1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:numColumns="1" >

        </ListView>
            
        
        
    </FrameLayout></ScrollView>
       
 <com.nirhart.parallaxscroll.views.ParallaxScrollView
    android:id="@+id/sv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:parallax_factor="1.9" 
      android:scrollY="500dp"
      android:scrollX="200dp"
    android:background="#cccccc"
      android:scrollbars="none"     >
             

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="10dp"
          android:layout_marginLeft="10dp"
          android:orientation="vertical"
         >
            <RelativeLayout     android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
           <ImageView
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:text="PARALLAXED"
        android:textSize="50sp"
        tools:ignore="HardcodedText"
        android:layout_gravity="center"
        android:minHeight="500dp"/>
           
           
           
           
             <ImageView
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:text="PARALLAXED"
        android:textSize="50sp"
        tools:ignore="HardcodedText"
        android:layout_gravity="center"
        android:minHeight="500dp"/>
           
           
           
           
           
           </RelativeLayout>
           
           
           <LinearLayout
               
              
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:orientation="vertical" 
          android:background="#ffffff">
           
          <com.androidbegin.jsonparsetutorial.Coustxt
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
         android:layout_marginRight="15dp" android:layout_marginLeft="15dp"
         
        android:text="counter"
        android:textSize="35dp"
        android:textStyle="bold" />
          
          
        <TextView
        android:id="@+id/rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="counter rank"
        android:layout_gravity="left" 
        android:layout_margin="15dp" 
        android:textStyle="italic"
        android:textColor="#9e9e9e"/>
          

   

 

  
<com.androidbegin.jsonparsetutorial.Coustxt
        android:id="@+id/population"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="counterpopulation"
        android:textSize="20dp"
        android:layout_margin="15dp" 
        android:layout_gravity="right"/>

<com.androidbegin.jsonparsetutorial.Coustxt
    android:id="@+id/commen"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:text="TextView" />



    <Button
        android:id="@+id/comsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Comments"
         />


       
    
  

</LinearLayout>
    
    
    </LinearLayout></com.nirhart.parallaxscroll.views.ParallaxScrollView>
    
</LinearLayout>
    
   
